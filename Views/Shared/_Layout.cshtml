<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ****大学***项目管理系统</title>
    @Styles.Render("~/Content/bootstrap.css")

    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                    <span class="sr-only">切换导航</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="./#" class="navbar-brand navbar-left">
                    <img src="~/Content/image/logo.png" height="25">
                </a>
                <span class="navbar-brand navbar-left">海南师范大学财务处内部项目管理系统&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
            </div>

            <nav class="collapse navbar-collapse bs-navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/home/Index">项目查询</a></li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            项目汇总<b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/home/shouruhuizong">收入汇总</a></li>
                            <li><a href="/home/zhichuhuizong">支出汇总</a></li>
                            <li><a href="/home/docshouruv">收入明细</a></li>
                            <li><a href="/home/doczhichuv">支出明细</a></li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            项目录入<b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/home/Create">单个录入</a></li>
                            <li><a href="/home/excelImport">批量录入</a></li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            参数设置<b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/zhixingdanweis/Index">执行单位设置</a></li>
                            <li><a href="/Account/Index">用户管理</a></li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </nav>
        </div>
    </div>

    <div class="container-fluid">
        @RenderBody()
        <hr />
        <footer>
            <p style="text-align:center;">&copy; @DateTime.Now.Year - 海南师范大学财务处 版权所有</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
